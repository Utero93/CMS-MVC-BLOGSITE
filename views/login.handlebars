<div class="row my-5">

  <div class="col-md-6 mb-5 display-flex flex-column justify-content-center align-items-center">
    <h2 id="login-heading">Login</h2>

    <form class="form login-form">

      <div class="form-group">

        <label for="username-login">
          {{!-- Username: --}}
        </label>

        <input 
        class="form-input" 
        type="text" 
        id="username-login" 
        placeholder="Enter Your Username"
        />

      </div>

      <div class="form-group">
        
        <label for="password-login">
          {{!-- Password: --}}
        </label>

        <input 
        class="form-input" 
        type="password" 
        id="password-login"
        placeholder="Enter Your Password"
        />

      </div>

      <div id="login-btn-container" class="form-group btn-container">

        <button 
        class="btn btn-primary" 
        type="submit"
        id="login-btn">
        Login
        </button>

      </div>

    </form>

  </div>
  <div class="col-md-6 display-flex flex-column justify-content-center align-items-center to-signup-form">

    <h2>Not A Member, Yet?</h2>

    <a id="signup" href="/signup">Join Us Now!</a>

  </div>

</div>

<script src="./js/login.js"></script>