<div class="row">

  <div class="col-auto">
    <h2 id="welcome">
      Welcome, <span id="user-welcome">{{username}}!</span>
    </h2>
  </div>

</div>

<div class="row mt-4">

  <div class="col-md-6">

    <h3>Create Next Post:</h3>

    <form class="form new-post-form">

      <div class="form-group">

        <label for="post-title">
          post title:
        </label>

        <input 
        class="form-input" 
        type="text" 
        id="post-title" 
        name="post-title" 
        placeholder="What's your new post going to be called?"
        />

      </div>

      <div class="form-group">

        <label for="post-content">
          content:
        </label>

        <textarea 
        class="form-input" 
        id="post-content" 
        name="post-content"
        >
        </textarea>
        
      </div>

      <div class="form-group">

        <button 
        type="submit" 
        class="btn btn-primary"
        id="create-btn"
        >
          Create
        </button>

      </div>

    </form>

  </div>

  {{#if posts.length}}

  <div class="col-md-6 post-list">

    <h3>Your Past Posts:</h3>

    {{#each posts as |post|}}

    <div class="row mb-2">

      <div class="col-md-8">

        <h4><a id="post-title-link" href="/post/{{post.id}}">{{post.title}}</a></h4>

      </div>

      <div class="col-md-4">

        <button class="btn btn-sm edit-btn" id="update-post-btn" data-id="{{post.id}}">EDIT</button>

        <button class="btn btn-sm btn-danger delete-btn" id="delete-post-btn" data-id="{{post.id}}">DELETE</button>

      </div>

    </div>
    
    {{/each}}

  </div>

  {{/if}}

</div>

<script src="./js/create-post.js"></script>
<script src="./js/delete-post.js"></script>
<script src="./js/edit-post.js"></script>